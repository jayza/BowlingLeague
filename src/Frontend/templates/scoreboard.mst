<div class="scorecard">
  {{#scoreboard}}
  <div class="frame">
    <div class="top-container">
      <div class="throw">{{ 0 }}</div>
      <div class="throw">{{ 1 }}</div>
      {{#2}}
      <div class="throw">{{ 2 }}</div>
      {{/2}}
    </div>
    <div class="bottom-container">
      <div class="score">{{ score }}</div>
    </div>
  </div>
  {{/scoreboard}}
</div>